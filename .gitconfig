[ghq]
	root = ~/ghq
	root = ~/go/src

[alias]
	a = add
	br = branch
	brp= !git branch | peco
	cm = commit
	co = checkout
	cop = !git checkout $(git branch | peco)
	df = diff
    dfw = diff --word-diff	# 行ごとの差分じゃなくて，単語レベルでの差分を色付きで表示する
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	st = status
